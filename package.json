{
  "name": "webpack-modern-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate to start projects from scratch with React and Webpack 4",
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibbatta/webpack-modern-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/ibbatta/webpack-modern-boilerplate/issues"
  },
  "author": "Maurizio Battaghini <maurizio.battaghini@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 9.10.x",
    "yarn": ">= 1.9.x",
    "npm": ">= 6.3.x"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "scripts": {
    "start": "NODE_ENV=production webpack -p",
    "start:dev": "NODE_ENV=development webpack-dev-server -d --profile",
    "analyze": "webpack-dashboard -- webpack-dev-server",
    "test": "jest"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router": "^4.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.6.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "handlebars-loader": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.3",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.3.0",
    "postcss-url": "^8.0.0",
    "react-test-renderer": "^16.5.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dashboard": "^2.0.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-md5-hash": "^0.0.6",
    "workbox-webpack-plugin": "^3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "jest": {
    "bail": true,
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "__tests__/components/**/*.{test,spec}.{js,jsx}",
      "app/**/*.{test,spec}.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/"
    ],
    "coverageDirectory": "<rootDir>/__tests__/coverage",
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup/setupEnzyme.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleDirectories": [
      "node_modules",
      "app"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setup/",
      "<rootDir>/__tests__/coverage",
      "<rootDir>/node_modules"
    ]
  }
}
